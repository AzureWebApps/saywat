div.row-fluid
  div.span12
    h1 say wat?
    if phrase
      h2 what does "#{phrase}" mean?
    else
      h2 got a word you don't understand?

div.row-fluid
  div.span12.input
    h3 use it in a sentence
    div.useInSentence
      input(type='text', name='useInSentence', value=phrase)

div.row-fluid
  div.span12.input
    h3 can you guess the country of origin?
    div.countryOfOrigin
      input(type='text', name='countryOfOrigin')

div.row-fluid
  div.span12.go
      input.btn(type='submit', value='go')